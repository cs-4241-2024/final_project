<dialog id="add_food" class="modal modal-bottom sm:modal-middle">
  <div class="modal-box">
    <form method="dialog">
      <button class="btn btn-sm btn-circle btn-ghost absolute right-2 top-2">âœ•</button>
    </form>
    <h3 class="text-xl font-bold">Add Food</h3>

   <form hx-post="/api/food/make" hx-target="body">
      <div class="items-center mt-2 space-y-3">
        <input type="hidden" name="locationID" value="{{location.id}}">

        <label class="form-control">
          <div class="label">
            <span class="label-text">Name</span>
          </div>
          <input class="input input-bordered w-full" id="name" name="name" type="text" />
        </label>
        <label class="form-control">
          <div class="label">
            <span class="label-text">Category</span>
          </div>
          <input class="input input-bordered w-full" id="category" name="category" type="text" />
        </label>
        <label class="form-control">
          <div class="label">
            <span class="label-text">Quantity</span>
          </div>
          <input class="input input-bordered w-full" id="quantity" name="quantity" type="number" step="1" min="0" />
        </label>
        <label class="form-control">
          <div class="label">
            <span class="label-text">Wanted Quantity</span>
          </div>
          <input class="input input-bordered w-full" id="wantedQuantity" name="wantedQuantity" type="number" step="1" min="0" />
        </label>
        <label class="form-control">
          <div class="label">
            <span class="label-text">Unit Price ($)</span>
          </div>
          <input class="input input-bordered w-full" id="unitPrice" name="unitPrice" type="number" step="0.01" min="0" />
        </label>

        <button class="btn btn-neutral w-full" type="submit">
          Add
        </button>
      </div>
    </form>
  </div>
</dialog>
